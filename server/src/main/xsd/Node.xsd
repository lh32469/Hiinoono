<?xml version="1.0"?>

<xs:schema version="1.0"
           xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:jaxb="http://java.sun.com/xml/ns/jaxb"
           xmlns:xjc="http://java.sun.com/xml/ns/jaxb/xjc"
           xmlns:hn="http://jaxb.hiinoono.com"
           jaxb:version="2.1"
           jaxb:extensionBindingPrefixes="xjc"
           xmlns="http://jaxb.hiinoono.com"
           targetNamespace="http://jaxb.hiinoono.com"
           elementFormDefault="qualified">
  
    <xs:element name="node" type="node" />
   
    <xs:complexType name="node">
        <xs:sequence>
            <xs:element name="hostname"
                        maxOccurs="1"
                        type="xs:string"/>
            <xs:element name="id"
                        maxOccurs="1"
                        type="xs:string"/>
            <xs:element name="status"
                        minOccurs="0"
                        maxOccurs="1"
                        type="status"/>
            <xs:element name="ksm"
                        minOccurs="0"
                        maxOccurs="1"
                        type="ksm"/>
        </xs:sequence>  
    </xs:complexType>
    
    <!-- 
    Wrapper element since Jersey default WADL generator only generates 
    a Node for a @GET method that returns List<Node>
    -->
    <xs:element name="nodes" type="nodes" />
    
    <xs:complexType name="nodes">
        <xs:sequence>
            <xs:element name="node"
                        minOccurs="0"
                        maxOccurs="unbounded"
                        type="node"/>
        </xs:sequence>  
    </xs:complexType>

    <!-- For Kernel Shared Memory settings -->
    <xs:element name="ksm" type="ksm" />

    <xs:complexType name="ksm">
        <xs:sequence>
            <xs:element name="pages_to_scan"
                        maxOccurs="1"
                        type="xs:int"/>
            <xs:element name="sleep_millisecs"
                        maxOccurs="1"
                        type="xs:int"/>
            <xs:element name="run"
                        maxOccurs="1"
                        type="xs:int"/>
        </xs:sequence>
    </xs:complexType>

</xs:schema>
